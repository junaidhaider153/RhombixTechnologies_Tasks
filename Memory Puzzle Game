# ============================================
# MEMORY PUZZLE GAME
# Rhombix Technologies
# ============================================

import random
import time

symbols = ['A', 'B', 'C', 'D', 'E', 'F']
cards = symbols * 2
random.shuffle(cards)

revealed = [False] * len(cards)

TIME_LIMIT = 60
start_time = time.time()

def display_board():
    print("\nBoard:")
    for i in range(len(cards)):
        if revealed[i]:
            print(cards[i], end=" ")
        else:
            print("*", end=" ")
    print()
    print("Indexes:")
    for i in range(len(cards)):
        print(i, end=" ")
    print("\n")

def all_matched():
    return all(revealed)

print("üß† MEMORY PUZZLE GAME")
print("Match all pairs within 60 seconds!")

while True:
    display_board()

    elapsed = int(time.time() - start_time)
    remaining = TIME_LIMIT - elapsed

    if remaining <= 0:
        print("‚è∞ Time Over! Game Finished.")
        break

    print(f"‚è≥ Remaining Time: {remaining} seconds")

    try:
        first = int(input("Enter first card index: "))
        second = int(input("Enter second card index: "))

        if first < 0 or first >= len(cards) or second < 0 or second >= len(cards):
            print("‚ùå Index out of range. Try again.")
            continue

        if first == second:
            print("‚ùå Same index selected. Choose different cards.")
            continue

        if revealed[first] or revealed[second]:
            print("‚ùå One or both cards already revealed.")
            continue

        revealed[first] = True
        revealed[second] = True
        display_board()

        if cards[first] == cards[second]:
            print("‚úÖ Match Found!")
        else:
            print("‚ùå Not a match.")
            time.sleep(2)
            revealed[first] = False
            revealed[second] = False

        if all_matched():
            print("üéâ Congratulations! You matched all cards!")
            break

    except ValueError:
        print("‚ö†Ô∏è Please enter numbers only.")

print("Thanks for playing!")
